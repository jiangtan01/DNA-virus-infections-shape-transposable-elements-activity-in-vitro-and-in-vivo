###########statistic############
#######TEs binding up peaks############
all_TE_name = read.table(file.path("/data/akhtar/suny/HSV1/TE_project/HSV1/NC_HSV1_RNAseq/noncoding.rnaseq.files.out","DESeq2_NC_HSV1.8hpi","repeat_name_DEresults.tsv"), sep="\t")
all_TE_name=subset(all_TE_name,grepl("DNA|LTR|LINE|SINE", rownames(all_TE_name)))
all_TE_name$symbol=gsub("^(.*?):.*","\\1",rownames(all_TE_name))
all_TE_name=all_TE_name$symbol
TE_up8hpi <- read.table("/data/akhtar/suny/HSV1/TE_project/HSV1/ATAC_hff_12468hpi/human_mapping/CSAW_MACS2_HSV1_8hpi/TE_overlap_up8hpi.summits.bed", header=FALSE, stringsAsFactors=FALSE)
TE_up8hpi_name = unique(TE_up8hpi$V5) 
TE_up8hpi_name=intersect(TE_up8hpi_name,all_TE_name)

#######up expression TEs############
up_expression_TEs = read.table(file.path("/data/akhtar/suny/HSV1/TE_project/HSV1/NC_HSV1_RNAseq/Output/DE_TE_in4timepoints.tsv"), sep="\t")
up_expression_TEs_name=up_expression_TEs$V1

intersect(TE_up8hpi_name,up_expression_TEs_name)


#########overlap###############
###############make venndiagram################
library("VennDiagram") 

p1=draw.pairwise.venn(area1 = 966,                
                      area2 = 437,
                      cross.area = 430,
                      fill = c("#97FEED", "#F29727"),lty = "blank",
                      category = c("up_TE_RNAseq", "up_TE_ATACseq"))
