##############ATAC TEs overlap up profile################
################up TE ATAC profile ###################
all_TE_name = read.table(file.path("/data/akhtar/suny/HSV1/TE_project/HSV1/NC_HSV1_RNAseq/noncoding.rnaseq.files.out","DESeq2_NC_HSV1.8hpi","repeat_name_DEresults.tsv"), sep="\t")
all_TE_name=subset(all_TE_name,grepl("DNA|LTR|LINE|SINE", rownames(all_TE_name)))
all_TE_name$symbol=gsub("^(.*?):.*","\\1",rownames(all_TE_name))
all_TE_name$class=gsub("^.*:([^:]+)$", "\\1",rownames(all_TE_name))
all_TE_name=all_TE_name$symbol

write.table(rownames(all.merged),file=file.path("/data/akhtar/suny/HSV1/TE_project/TEbed/only_allTEs_name.tsv"),row.names = FALSE,quote = FALSE,col.names = FALSE)

